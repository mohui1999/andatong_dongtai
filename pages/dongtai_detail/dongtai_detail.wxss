/* pages/dongtai_detail/dongtai_detail.wxss */
page {
  display: flex;
  flex-direction: column;
  height: 100%; 
  background-image: url(http://xiemenglei.cn/wp-content/uploads/2019/07/dongtai_bg.jpg);
}

/**动态的容器**/
.DtDetail-container{
  width: 100%;
  padding-top: 10rpx;
}

/**单个动态框框**/
.dongtai-item{
  width: 90%;
  margin: 20rpx 40rpx 20rpx 40rpx;
  border-radius: 15rpx;
  padding-bottom: 10rpx;
  background-color: #ffffff;
}

/**帖子头部，包括用户头像，用户名，时间**/
.dongtai-item-head{
  display: flex;
}

/**用户头像**/
.dongtai-avatar{
  width: 100rpx;
  height: 100rpx;
  margin: 20rpx 20rpx 10rpx 20rpx;
  border-radius: 10rpx;
}

/**flex设置用户名，时间**/
.dongtai-item-head-right{
  margin-top: 20rpx;
}

/**用户名**/
.dongtai-userName{
  font-size: 35rpx;
  color: #313131;
  font-weight: 700;
  letter-spacing: 6rpx;
  margin-top: 10rpx;
}

/**发送时间**/
.dongtai-sendTime{
  font-size: 23rpx;
  color: #4e4a4a;
  margin-top: 10rpx;
}

/**动态内容**/
.dongtai-content{
  font-size: 30rpx;
  letter-spacing: 7rpx;
  margin: 10rpx 20rpx 10rpx 20rpx;
  line-height: 40rpx;
  word-break:break-all;
}

/**图像的外框**/
.dongtai-imageCon{
  height: 400rpx;
}

/**图像**/
.dongtai-image{
  margin-left: 20rpx;
  margin-right: 20rpx;
  border-radius: 10rpx;
}

/**动态最底部，包括点赞评论**/
.dongtai-bottom{
  display: flex;
  margin: 20rpx 20rpx 20rpx 20rpx;
  align-items: center;
}

/**动态最底部flex左边空白占5**/
.dongtai-bottom-left{
  flex: 5;
}

/**赞数**/
.dongtai-likeNum{
  flex: 1;
  margin-left: 10rpx;
  font-size: 30rpx;
}

/**评论数**/
.dongtai-comNum{
  flex: 1;
  margin-left: 10rpx;
  font-size: 30rpx;
}

/**点赞**/
.dongtai-like{
  height: 40rpx;
  width: 40rpx;
  
}

/**评论**/
.dongtai-comment{
  height: 40rpx;
  width: 40rpx;
}

/**实现喜欢与评论的tab**/
.DtDetail-foot-tab{
  display: flex;
  width: 90%;
  height: auto;
  margin: 20rpx 40rpx 3rpx 40rpx;
  align-items: center;
  border-radius: 15rpx;
  padding-top: 10rpx;
  background-color: #ffffff;

}

/**切换的喜欢tab**/
.DtDetail-like-tab{
  flex: 1;
  display: flex;
}

/**切换的评论tab**/
.DtDetail-comment-tab{
  flex: 1;
  display: flex;
}

/**喜欢tab文字**/
.DtDetail-like{
  height: 50rpx;
  font-size: 30rpx;
  margin-left: 100rpx;
  padding-bottom: 5rpx;
}

/**评论tab文字**/
.DtDetail-comment{
  height: 50rpx;
  font-size: 30rpx;
  margin-left: 100rpx;
  padding-bottom: 5rpx;
}

/**喜欢tab数**/
.DtDetail-likeNum{
  margin-left: 10rpx;
  font-size: 30rpx;
  padding-bottom: 5rpx;
}

/**评论tab数**/
.DtDetail-comNum{
  margin-left: 10rpx;
  font-size: 30rpx;
  padding-bottom: 5rpx;
}

/**tab属性设置**/
.tab-item{
  border: 1px solid #ffffff;
}

/**tab处于选中时的状态**/
.tab-item.active {
  color: #c25b5b;
  border-bottom-color: #c25b5b;
}

/**最下方的内容（喜欢，评论）**/
.DtDetail-foot-content{
  flex: 1;
  height: 100%;
}

/**最下方swiper组件的设置**/
.DtDetail-foot-content > swiper {
  height: 100%;
}

