/**
评论详情部分
**/
.comment-container{
  width: 100%;
}

/**单个评论框**/
.comment-item{
  width: 90%;
  margin: 4rpx 40rpx 4rpx 40rpx;
  background-color: #ffffff;
  padding-top: 5rpx;
  padding-bottom: 5rpx;
  border-radius: 15rpx;
}

/**评论框头部，头像用户名时间点赞**/
.comment-head{
  display: flex;
}

/**
评论头部flex设置头像用户名，时间，点赞
**/

/**头像**/
.comment-left{
  display: flex;
  flex: 2;
}

/**评论flex设置用户名，时间**/
.comment-middle{
  margin-top: 10rpx;
}

/**设置点赞flex**/
.comment-right{
  display: flex;
  flex: 1;
}


/**评论用户头像**/
.comment-avatar{
  width: 90rpx;
  height: 90rpx;
  margin: 20rpx 20rpx 10rpx 20rpx;
   display: block;
  overflow: hidden;
  border-radius: 50%;
}

/**评论用户名**/
.comment-name{
  font-size: 35rpx;
  color: #313131;
  font-weight: 400;
  letter-spacing: 6rpx;
  margin-top: 10rpx;
}

/**评论发送时间**/
.comment-time{
  font-size: 23rpx;
  color: #4e4a4a;
  margin-top: 10rpx;
}

.comment-like-left{
  flex: 2;
}

/**评论点赞**/
.comment-like{
  height: 40rpx;
  width: 40rpx;
  margin-top: 45rpx;
}

/**评论点赞数**/
.comment-likeNum{
  flex: 1;
  font-size: 30rpx;
  margin-top: 45rpx;
}

/**评论内容**/
.comment-content{
  font-size: 30rpx;
  letter-spacing: 7rpx;
  margin: 10rpx 20rpx 10rpx 20rpx;
  line-height: 40rpx;
  word-break:break-all;
}

